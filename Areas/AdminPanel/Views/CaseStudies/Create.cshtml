@using LawProject.Models;
@model CaseStudies

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Case Studies</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" type="text" class="form-control"  placeholder="Photo" />
                                
                                <span asp-validation-for="Photo"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input asp-for="Title" type="text" class="form-control"  placeholder="Title" />
                            </div>

                            <div class="form-group">
                                <label asp-for="SubTitle">Subtitle</label>
                                <input asp-for="SubTitle" type="text" class="form-control"  placeholder="Subtitle" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Date">Date</label>
                                <input asp-for="Date" type="text" class="form-control" placeholder="Date" />
                            </div>


                            

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>